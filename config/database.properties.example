# Database Configuration for RestaurantPOS
# Copy this file to database.properties and edit for your environment

# JDBC URL - Change IP for LAN deployment
jdbcUrl=jdbc:mysql://localhost:3306/restaurant_db?useSSL=false&serverTimezone=Asia/Ho_Chi_Minh&allowPublicKeyRetrieval=true&characterEncoding=UTF-8

# Database Credentials - CHANGE THESE!
dataSource.user=your_username
dataSource.password=your_password

# HikariCP Pool Settings
maximumPoolSize=10
minimumIdle=2
idleTimeout=30000
connectionTimeout=10000
maxLifetime=1800000

# Additional MySQL Settings
dataSource.cachePrepStmts=true
dataSource.prepStmtCacheSize=250
dataSource.prepStmtCacheSqlLimit=2048
